<%= form_for(@mantenimiento) do |f| %>
	<% if @mantenimiento.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@mantenimiento.errors.count, "error") %> prohibited this mantenimiento from being saved:</h2>
				<ul>
					<% @mantenimiento.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
	<% end %>
<div class="row">
	<div class="large-4 columns">
		<div class="field">
		<%= f.label :fecha %><br>
		<%= f.date_select :fecha %>
		</div>
	</div>
	<div class="large-8 columns">
		<div class="field">
		<%= f.label :observacion %><br>
		<%= f.text_area :observacion %>
		</div>
	</div>
</div>
	<div class="row">
		<div class="large-4 columns">
			<div class="field">
			<%= f.label :kilometraje %><br>
			<%= f.text_field :kilometraje %>
			</div>
		</div>
		<div class="large-4 columns">
			<div class="field">
			<%= f.label :precio %><br>
			<%= f.text_field :precio %>
			</div>
		</div>
		<div class="large-4 columns">
			<div class="field">
			<%= f.label :autobus_id%>
			<%= collection_select(:mantenimiento, :autobus_id, @autobuses, :id, :codigo) %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="large-12 columns">
			<div class="actions">
			<%= f.submit %>
			</div>
		</div>
	</div>
<% end %>
