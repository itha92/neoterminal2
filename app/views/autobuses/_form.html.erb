<%= form_for(@autobus) do |f| %>
	<% if @autobus.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@autobus.errors.count, "error") %> prohibited this autobus from being saved:</h2>

		<ul>
		<% @autobus.errors.full_messages.each do |msg| %>
