		<% end %>
		</ul>
	</div>
	<% end %>

<div class="row">
	<div class="large-4 columns">
		<div class="field">
		<%= f.label :codigo %><br>
		<%= f.text_field :codigo %>
		</div>
	</div>
	<div class="large-4 columns">
		<div class="field">
		<%= f.label :marca %><br>
		<%= f.text_field :marca %>
		</div>
	</div>
	<div class="large-4 columns">
		<div class="field">
		<%= f.label :modelo %><br>
		<%= f.text_field :modelo %>
		</div>
	</div>
</div>
<div class="row">
	<div class="large-4 columns">
		<div class="field">
		<%= f.label :capacidad %><br>
		<%= f.number_field :capacidad %>
		</div>
	</div>
	<div class="large-4 columns">
		<div class="field">
		<%= f.label :is_active %><br>
		<%= f.check_box :is_active %>
		</div>
	</div>
	<div class="large-4 columns">
		<div class="actions">
		<%= f.submit %>
		</div>
	</div>
</div>
<% end %>
