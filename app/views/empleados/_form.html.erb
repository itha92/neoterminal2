<%= form_for(@empleado) do |f| %>
	<% if @empleado.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@empleado.errors.count, "error") %> prohibited this empleado from being saved:</h2>

		<ul>
		<% @empleado.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
	<% end %>
	<div class="row">
		<div class="large-3 columns">
			<div class="field">
				<%= f.label :identidad %><br>
				<%= f.text_field :identidad %>
			</div>
		</div>
		<div class="large-4 columns">
			<div class="field">
				<%= f.label :nombre %><br>
				<%= f.text_field :nombre %>
			</div>
		</div>
		<div class="large-5 columns">
			<div class="field">
				<%= f.label :direccion %><br>
				<%= f.text_area :direccion %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="large-3 columns">
			<div class="field">
				<%= f.label :telefono %><br>
				<%= f.text_field :telefono %>
			</div>
		</div>
		<div class="large-2 columns">
			<div class="field">
				<%= f.label :fecha_nacimiento %><br>
				<%= f.date_select :fecha_nacimiento,start_year: 1910 %>
			</div>
		</div>
		<div class="large-3 columns">
			<div class="field">
				<%= f.label :puesto %>
				<%= f.select :puesto, [['Cajero','Cajero'],['Conductor','Conductor'],['Contratista','Contratista'],['Supervisor','Supervisor'],['Contador','Contador']] %>
			</div>
		</div>
		<div class="large-4 columns">
			<div class="field">
				<%= f.label :terminal_id %><br>
				<%= collection_select(:empleado, :terminal_id, @terminales, :id, :codigo)%>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="actions">
			<%= f.submit %>
		</div>
	</div>
<% end %>
