<div class="row">
	<h1>Listing asientos</h1>
</div>
<div class="row">
	<table>
	<thead>
		<tr>
			<th>Id</th>
			<th>Asiento no</th>
			<th>Tipo</th>
			<th>Is active</th>
			<th>Autobus</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @asientos.each do |asiento| %>
		<tr>
			<td><%= asiento.id %></td>
			<td><%= asiento.asiento_no %></td>
			<td><%= asiento.tipo %></td>
			<td><%= asiento.is_active %></td>
			<td><%= asiento.autobus.codigo %></td>
			<td><%= link_to 'Mostrar', asiento %></td>
			<td><%= link_to 'Editar', edit_asiento_path(asiento) %></td>
			<td><%= link_to 'Eliminar', asiento, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
		</tr>
		<% end %>
	</tbody>
	</table>
	
</div>

<div class="row">
	<%= link_to 'Nuevo Asiento', new_asiento_path, class:"button" %>
</div>

