	<%= form_for(@boleto) do |f| %>
		<% if @boleto.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@boleto.errors.count, "error") %> prohibited this boleto from being saved:</h2>
				<ul>
					<% @boleto.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

	<div class="panel">
		<div class="row">
			<h3>Pasajero</h3>
				<div class="large-3 columns">
					<div class="field">
						<%= f.label :identidad %>
						<%= f.text_field :identidad %>
					</div>
				</div>
			<div class="large-3 columns">
				<div class="field">
					<%= f.label :nombre %>
					<%= f.text_field :nombre %>
				</div>
			</div>
			<div class="large-3 columns">
				<div class="field">
					<%= f.label :itinerarios_id %>
					<%= collection_select(:boleto, :itinerarios_id, @itinerarios, :id, :hora_salida)%>
				</div>
			</div>
			<div class="large-3 columns">
				<div class="field">
					<%= f.label :terminal_id%>
					<%= collection_select(:boleto, :terminal_id, @terminales, :id, :codigo) %>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="large-2 columns">
			<div class="field">
				<%= f.label :fecha %><br>
				<%= f.date_select :fecha %>
			</div>
		</div>
		<div class="large-2 columns">
			<div class="field">
				<%= f.label :descuento %><br>
				<%= f.text_field :descuento %>
			</div>
		</div>
		<div class="large-2 columns">
			<div class="field">
				<%= f.label :subtotal %><br>
				<%= f.text_field :subtotal, :readonly => true %>
			</div>
		</div>
		<div class="large-2 columns">
			<div class="field">
				<%= f.label :total %><br>
				<%= f.text_field :total, :readonly => true %>
			</div>
		</div>
		<div class="large-4 columns">
			<div class="field">
				<%= f.label :precio_boletos_id%><br>
				<%= collection_select(:boleto, :precio_boletos_id, @boletos, :id, :origen_con_destino)%>
			</div>
		</div>
	</div>
		<div class="row">
			<div class="actions">
			<%= f.submit %>
			</div>
		</div>
	<% end %>