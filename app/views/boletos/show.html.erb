<div class="row show_boletos">
	
	<p id="notice"><%= notice %></p>

	<p>
		<strong>Fecha:</strong>
		<%= @boleto.fecha %>
	</p>

	<p>
		<strong>Identidad:</strong>
		<%= @boleto.identidad%>
	</p>
	<p>
		<strong>Nombre de Pasajero:</strong>
		<%= @boleto.nombre%>
	</p>

	<p>
		<strong>Hora de Salida:</strong>
		<span><%= @horario_terminal.hora_salida %></span>
	</p>

	<p>
		<strong>Descuento:</strong>
		<%= @boleto.descuento %>
	</p>

	<p>
		<strong>Subtotal:</strong>
		<%= @boleto.subtotal %>
	</p>

	<p>
		<strong>Total:</strong>
		<%= @boleto.total %>
	</p>


	<%unless @boleto.precio_boletos_id.nil? %>
		<p>
		<strong>Ruta:</strong>
		<%= @precio_boleto.origen %> - <%= @precio_boleto.destino%>
		</p>
	<%end%>

	<p>
		<strong>Terminal:</strong>
		<%= @boleto.terminal.codigo %>
	</p>

	<%= link_to 'Editar', edit_boleto_path(@boleto), class:"button" %>
	<%= link_to 'Atras', boletos_path, class:"button" %>
</div>
